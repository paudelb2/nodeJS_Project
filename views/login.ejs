<!DOCTYPE html>
<html>

     <head>

               <title>
                    login
               </title>
               <link rel='stylesheet' href='/stylesheets/style.css' />
               <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
                    integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
                    crossorigin="anonymous" />
                    <%- include('header.ejs') %>
     </head>

     <body>
          <h4 class="mar-left-top">LOG IN</h4>
          <div class="container">
               <form class="col-md-3 offset-md-4 mb-4" method="POST" action="http://localhost:3000/login">
                    <label for="email">Email</label>
                    <input class="form-control mb-3" id="email" type="email" name="email" placeholder="email"
                         required />
                    <label for="password">Password</label>
                    <input class="form-control mb-3" type="password" id="password" name="password"
                         placeholder="password" required />
                    <button class="button btn-success" type="submit">Log In</button>
                    <button class="button btn-danger" type="reset">Reset</button>
               </form>
          </div>
     </body>

</html>